{
  "name": "ecommerce-api",
  "version": "1.0.0",
  "description": "E-commerce REST API with Express, TypeScript, and JWT authentication",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "vitest",
